@model EPAM_Internet_Provider.Models.UserInfo

@{
    ViewBag.Title = "AdminAccountPage";
}

<h2>AdminAccountPage</h2>

<div>
    <h4>Hello,@Html.DisplayFor(model => model.Name)</h4>
    @Html.ActionLink("Reset password", "ResetPassword", "General")
    <hr />
    @Html.ActionLink("Add user", "AddUserByAdminSkill", "Admin")
    @Html.ActionLink("Service list", "ServiceList", "General")
    @Html.ActionLink("Edit rate list", "EditRatesDetails", "General")
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Account)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account)
        </dd>

    </dl>
</div>
@if (Model.Subscributions != null && Model.Subscributions.Count > 0)
{
    foreach (var item in Model.Subscributions)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Rates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceBalance)
            </td>
            <td>
                @Html.ActionLink("Charge balance", "ChargeServiceBalance", "Client");
            </td>
            <td>
                @Html.ActionLink("Choose another rate", "ChooseAnotherRate", "Client");
            </td>
            <td>
                @Html.ActionLink("Unsubscribe", "UnsubscribeFromRate", "Client");
            </td>
        </tr>
    }
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
